<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#388E3C"
    tools:context=".OrdersActivity">

    <Button
        android:id="@+id/cancelOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#C2185B"
        android:backgroundTint="#C2185B"
        android:drawableTint="#689F38"
        android:text="Cancel Selected Order"
        android:textColor="#689F38"
        android:textColorHint="#689F38"
        android:textColorLink="#FF0000"
        app:iconTint="#388E3C"
        app:rippleColor="#303F9F"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="657dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="206dp"
        android:layout_height="57dp"
        android:fontFamily="casual"
        android:text="Store Orders"
        android:textAllCaps="false"
        android:textColor="#E64A19"
        android:textColorHint="#FF0000"
        android:textColorLink="#FF0000"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="39dp" />

    <ListView
        android:id="@+id/ordersList"
        android:layout_width="409dp"
        android:layout_height="500dp"
        android:layout_marginTop="124dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>